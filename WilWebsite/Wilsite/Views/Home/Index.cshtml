@{
    ViewData["Title"] = "Home";
}

<section class="hero-section position-relative text-white text-center overflow-hidden">
    <video autoplay muted loop playsinline class="hero-video">
        <source src="~/videos/video.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <div class="overlay"></div>

    <div class="container hero-content position-relative d-flex flex-column justify-content-center align-items-center">
        <h1 class="display-3 fw-bold mb-3 animate__animated animate__fadeInDown">IC Norath Charitable Trust</h1>
        <p class="lead mb-4 animate__animated animate__fadeInUp">
            Providing disaster relief and sustainable development for communities in need.
        </p>
        <a asp-controller="Home" asp-action="Donate" class="btn btn-warning btn-lg px-5 py-3 shadow-lg">Get Involved</a>
    </div>
</section>

<section class="py-5 text-center">
    <div class="container">
        <h2 class="fw-bold mb-4 text-primary">Our Mission</h2>
        <p class="lead text-muted mx-auto" style="max-width: 800px;">
            To provide comprehensive disaster relief and implement sustainable poverty reduction initiatives that
            improve the quality of life for disadvantaged individuals and communities in South Africa.
        </p>
    </div>
</section>

<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center fw-bold mb-5 text-success">What We Do</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow border-0">
                    <img src="~/lib/Images/img4.jpeg" class="card-img-top" alt="Disaster Relief">
                    <div class="card-body text-center">
                        <h5 class="fw-semibold text-primary">Disaster Relief</h5>
                        <p>Immediate response, aid distribution, and community resilience training.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow border-0">
                    <img src="~/lib/Images/img2.jpeg" class="card-img-top" alt="Poverty Alleviation">
                    <div class="card-body text-center">
                        <h5 class="fw-semibold text-primary">Poverty Alleviation</h5>
                        <p>Economic empowerment through education, skills training, and nutrition programs.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow border-0">
                    <img src="~/lib/Images/img3.jpeg" class="card-img-top" alt="Sustainability">
                    <div class="card-body text-center">
                        <h5 class="fw-semibold text-primary">Sustainability</h5>
                        <p>Building strong, self-sufficient communities capable of overcoming adversity.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-section {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .hero-video {
        position: absolute;
        top: 0; left: 0;
        width: 100%; height: 100%;
        object-fit: cover;
        z-index: 1;
    }
    .overlay {
        position: absolute;
        width: 100%; height: 100%;
        background: rgba(0, 0, 0, 0.6);
        z-index: 2;
    }
    .hero-content {
        z-index: 3;
        color: white;
    }
    .card-img-top {
        height: 250px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }
    .card:hover .card-img-top {
        transform: scale(1.05);
    }
</style>
