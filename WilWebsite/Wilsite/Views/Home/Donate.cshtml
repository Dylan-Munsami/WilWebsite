        <h6 class="fw-bold">EFT details:</h6>
        <div class="border rounded bg-light p-3 text-start">
            <p class="mb-0">
                <strong>Bank:</strong> First National Bank<br />
                <strong>Account Name:</strong> I.C. Norath Charitable Foundation<br />
                <strong>Account Number:</strong> 1234567890<br />
                <strong>Branch Code:</strong> 250655<br />
                <strong>Reference:</strong> Donation + Your Name
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Highlight selected amount button
        const amountButtons = document.querySelectorAll('.btn-amount');
        const customAmount = document.getElementById('customAmount');

        amountButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                amountButtons.forEach(b => b.classList.remove('selected'));
                btn.classList.add('selected');
                customAmount.value = btn.innerText.replace('R', '');
            });
        });

        // Add hover effect on payment buttons
        document.querySelectorAll('.pay-btn').forEach(btn => {
            btn.addEventListener('mouseenter', () => btn.style.opacity = "0.85");
            btn.addEventListener('mouseleave', () => btn.style.opacity = "1");
        });
    </script>
}

<style>
    .btn-amount {
        background-color: #f4f6e6;
        border: 1px solid #ddd;
        padding: 10px 25px;
        border-radius: 10px;
        font-weight: 600;
        transition: 0.2s;
    }
    .btn-amount:hover {
        background-color: #e8e8d8;
    }
    .btn-amount.selected {
        background-color: #ffd54f;
        border-color: #ffca28;
    }
    .pay-btn {
        border-radius: 10px;
    }
</style>
