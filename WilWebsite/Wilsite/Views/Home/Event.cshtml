@{
    ViewData["Title"] = "Upcoming Events";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-success">Events</h1>
        <p class="lead text-muted">Learn about our initiatives and how they help the community.</p>
    </div>

    <div class="row g-4">
        <!-- Event 1 -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm event-card">
                <img src="/lib/Images/img1.jpeg" class="card-img-top" alt="Cleanup" style="object-fit: cover; height: 200px;" />
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Community Cleanup Drive</h5>
                    <p class="card-text">
                        We organize neighborhood cleanups to keep our surroundings green and safe. Volunteers learn about sustainability while helping the local community.
                    </p>
                </div>
            </div>
        </div>

        <!-- Event 2 -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm event-card">
                <img src="https://images.unsplash.com/photo-1509099836639-18ba1795216d" class="card-img-top" alt="Education" style="object-fit: cover; height: 200px;" />
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Back-to-School Drive</h5>
                    <p class="card-text">
                        We provide school supplies to children in need, helping them start the school year prepared and motivated. Every contribution helps improve education access.
                    </p>
                </div>
            </div>
        </div>

        <!-- Event 3 -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm event-card">
                <img src="/lib/Images/img5.png" class="card-img-top" alt="Health Fair" style="object-fit: cover; height: 200px;" />
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Health Awareness Fair</h5>
                    <p class="card-text">
                        Free health screenings, workshops, and advice for all ages. We aim to promote healthy lifestyles and provide vital medical information to the community.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        
    </script>
}
