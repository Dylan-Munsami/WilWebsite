@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">Contact Us</h1>
        <p class="lead text-muted">We’re here to help — reach out via any of the methods below.</p>
    </div>

    <div class="row g-4 align-items-start justify-content-center">
        <!-- Contact Info Section -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm p-4 bg-primary text-white">
                <h4 class="fw-bold mb-4 text-warning">Get in Touch</h4>
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-telephone-fill fs-4 me-3 text-warning"></i>
                    <div>
                        <h6 class="mb-0 fw-semibold">Phone</h6>
                        <p class="mb-0">+27 82 456 7890</p>
                    </div>
                </div>
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-envelope-fill fs-4 me-3 text-warning"></i>
                    <div>
                        <h6 class="mb-0 fw-semibold">Email</h6>
                        <p class="mb-0">info@icnorathtrust.org</p>
                    </div>
                </div>
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-geo-alt-fill fs-4 me-3 text-warning"></i>
                    <div>
                        <h6 class="mb-0 fw-semibold">Address</h6>
                        <p class="mb-0">17 Alexandra Rd, Alexandra Park, Pietermaritzburg, 3201</p>
                    </div>
                </div>
                <div class="d-flex align-items-center mt-4">
                    <a href="https://instagram.com/icnorathtrust" target="_blank" class="text-warning fs-4 me-3">
                        <i class="bi bi-instagram"></i>
                    </a>
                    <a href="mailto:info@icnorathtrust.org" class="text-warning fs-4 me-3">
                        <i class="bi bi-envelope"></i>
                    </a>
                    <a href="tel:+27824567890" class="text-warning fs-4">
                        <i class="bi bi-telephone"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Contact Form Section -->
        <div class="col-lg-6">
            <div class="card p-4 shadow border-0">
                <h4 class="fw-bold text-primary mb-3">Send Us a Message</h4>
                <form id="contactForm">
                    <div class="mb-3">
                        <label class="form-label">Your Name</label>
                        <input type="text" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Message</label>
                        <textarea class="form-control" rows="4" required></textarea>
                    </div>

                    <button type="submit" class="btn btn-warning w-100 fw-bold text-dark">Send Message</button>
                </form>

                <div id="contactAlert" class="alert alert-success mt-3 d-none">
                     Message sent! We'll get back to you soon.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <script>
        document.getElementById("contactForm").addEventListener("submit", e => {
            e.preventDefault();
            e.target.reset();
            const alert = document.getElementById("contactAlert");
            alert.classList.remove("d-none");
            alert.classList.add("fade", "show");
        });
    </script>

    <style>
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        }
        .bi {
            transition: transform 0.2s ease, color 0.2s ease;
        }
        .bi:hover {
            transform: scale(1.2);
            color: #fff !important;
        }
    </style>
}
