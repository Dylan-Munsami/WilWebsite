@{
    var title = ViewData["Title"] ?? "I.C. Norath Charitable Foundation Trust";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        :root {
            --navy: #0A1A33;
            --gold: #FBC02D;
            --light: #f8f9fa;
        }

        /* ===== NAVBAR ===== */
        .navbar-custom {
            background-color: var(--navy);
            padding: 1rem 0;
        }

        .navbar-brand {
            color: var(--gold) !important;
            font-weight: 700;
            font-size: 1.4rem;
            display: flex;
            align-items: center;
        }

        .navbar-brand img {
            height: 45px;
            width: auto;
            border-radius: 6px;
            margin-right: 10px;
        }

        .navbar-nav .nav-link {
            color: #ffffff !important;
            font-weight: 500;
            margin: 0 10px;
            transition: color 0.3s ease, transform 0.2s ease;
        }

        .navbar-nav .nav-link:hover,
        .navbar-nav .nav-link.active {
            color: var(--gold) !important;
            transform: translateY(-2px);
        }

        .navbar-toggler {
            border-color: rgba(255, 255, 255, 0.3);
        }

        .navbar-toggler-icon {
            filter: invert(100%);
        }

       footer {
    background-color: #121325; 
    border-top: 2px solid var(--gold);
    padding: 3rem 0;
    color: #fff;
    animation: fadeInUp 1s ease;
}


       @@keyframes fadeInUp {
            0% { opacity: 0; transform: translateY(20px); }
            100% { opacity: 1; transform: translateY(0); }
        }

        footer img {
            height: 120px;
            width: auto;
            border-radius: 10px;
            transition: transform 0.3s ease, filter 0.3s ease;
        }

        footer img:hover {
            transform: scale(1.05);
            filter: brightness(1.15);
        }

        footer h5 {
            color: var(--gold);
            font-weight: 700;
            margin-bottom: 1rem;
        }

        footer p, footer a {
            color: #f1f1f1;
            text-decoration: none;
        }

        footer a:hover {
            color: var(--gold);
        }

        .social-icons a {
            font-size: 1.4rem;
            color: var(--gold);
            margin-right: 15px;
            transition: color 0.3s ease, transform 0.2s ease;
        }

        .social-icons a:hover {
            color: #ffffff;
            transform: scale(1.2);
        }
    </style>
</head>

<body class="bg-light">

    <!-- ===== NAVBAR ===== -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/lib/Images/hands.png" alt="Trust Logo" />
                    I.C. Norath Trust
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-lg-center">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">About Us</a></li>
                       
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a></li>
                        <li class="nav-item ms-lg-3">
                            <a class="btn btn-warning fw-bold text-dark px-3 py-2" asp-controller="Home" asp-action="Donate">
                                Donate
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ===== PAGE CONTENT ===== -->
    <div class="container pb-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- ===== FOOTER ===== -->
    <footer class="text-center text-md-start mt-5">
        <div class="container">
            <div class="row align-items-center gy-4">

                <!-- Logo -->
                <div class="col-md-3 text-center text-md-start">
                    <img src="~/lib/Images/logos.png" alt="I.C. Norath Logo" />
                </div>

                <!-- Contact Info -->
                <div class="col-md-5">
                    <h5>Contact Us</h5>
                    <p class="mb-1"><i class="bi bi-geo-alt-fill text-warning me-2"></i>17 Alexandra Rd, Alexandra Park, Pietermaritzburg, 3201</p>
                    <p class="mb-1"><i class="bi bi-telephone-fill text-warning me-2"></i>+27 82 456 7890</p>
                    <p class="mb-0"><i class="bi bi-envelope-fill text-warning me-2"></i>info@icnorathtrust.org</p>
                </div>

                <!-- Social Links -->
                <div class="col-md-4 text-center text-md-end">
                    <div class="social-icons mb-2">
                        <a href="https://www.instagram.com/icnorathtrust" target="_blank"><i class="bi bi-instagram"></i></a>
                        <a href="mailto:info@icnorathtrust.org"><i class="bi bi-envelope"></i></a>
                        <a href="tel:+27824567890"><i class="bi bi-telephone"></i></a>
                    </div>
                    <p class="small mb-0 text-white-50">© 2025 I.C. Norath Charitable Foundation Trust</p>
                    <p class="small text-white-50 mb-0">Empowering Communities | Building Futures</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- ===== SCRIPTS ===== -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
