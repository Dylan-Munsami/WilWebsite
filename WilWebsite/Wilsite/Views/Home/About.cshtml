@{
    ViewData["Title"] = "About";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">About IC Norath Charitable Trust</h1>
        <p class="lead text-muted">Empowering communities through compassion, collaboration, and resilience.</p>
    </div>

    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <img src="~/lib/Images/img7.png" alt="Community" class="img-fluid rounded shadow-lg" />
        </div>
        <div class="col-md-6">
            <h3 class="fw-semibold text-success">Who We Are</h3>
            <p>
                The IC Norath Charitable Foundation Trust is a South African non-profit organization 
                focused on disaster relief and poverty alleviation. We aim to build self-sufficient 
                communities capable of overcoming adversity and achieving long-term sustainability.
            </p>
            <ul class="list-group list-group-flush shadow-sm mt-3">
                <li class="list-group-item">🌍 Disaster Relief & Emergency Response</li>
                <li class="list-group-item">📚 Education & Skills Development</li>
                <li class="list-group-item">💊 Health & Nutrition Initiatives</li>
                <li class="list-group-item">🤝 Community Empowerment Programs</li>
            </ul>
        </div>
    </div>

    <div class="row text-center">
        <h2 class="fw-bold text-primary mb-4">Our Core Values</h2>
        <div class="col-md-2 offset-md-1">
            <div class="p-3 border rounded shadow-sm h-100">💖 Compassion</div>
        </div>
        <div class="col-md-2">
            <div class="p-3 border rounded shadow-sm h-100">⚖️ Integrity</div>
        </div>
        <div class="col-md-2">
            <div class="p-3 border rounded shadow-sm h-100">💪 Resilience</div>
        </div>
        <div class="col-md-2">
            <div class="p-3 border rounded shadow-sm h-100">🤝 Collaboration</div>
        </div>
        <div class="col-md-2">
            <div class="p-3 border rounded shadow-sm h-100">🌱 Sustainability</div>
        </div>
    </div>
</div>

<style>
    .list-group-item {
        background: #f8f9fa;
        border-left: 5px solid #0d6efd;
    }
    .border:hover {
        background-color: #0d6efd;
        color: white;
        transition: all 0.3s ease-in-out;
    }
</style>
