@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">Contact Us</h1>
        <p class="lead text-muted">We’re here to help — reach out via any of the methods below.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm bg-darkblue text-white p-3">
                <div class="row g-0">
                    <!-- Map on the left -->
                    <div class="col-md-6">
                        <div class="map-container" style="width:100%; height:100%; min-height:300px; border-radius:8px; overflow:hidden;">
                            <iframe
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3461.6843116125488!2d30.830680175616617!3d-29.8156633750396!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1ef6fe90b039c743%3A0x211e4b17e670363!2s17%20Alexander%20Rd%2C%20Alexander%20Park%2C%20Pinetown%2C%203610!5e0!3m2!1sen!2sza!4v1761759171204!5m2!1sen!2sza"
                                width="100%"
                                height="100%"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                            </iframe>
                        </div>
                    </div>

                    <!-- Contact details on the right -->
                    <div class="col-md-6 d-flex flex-column justify-content-center p-4">
                        <h4 class="fw-bold mb-4 text-warning">Get in Touch</h4>

                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-telephone-fill fs-4 me-3 text-warning"></i>
                            <div>
                                <h6 class="mb-0 fw-semibold">Phone</h6>
                                <p class="mb-0">+27 31 312 9648</p>
                            </div>
                        </div>

                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-envelope-fill fs-4 me-3 text-warning"></i>
                            <div>
                                <h6 class="mb-0 fw-semibold">Email</h6>
                                <p class="mb-0">admin@icnorathtrust.co.za</p>
                            </div>
                        </div>

                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-geo-alt-fill fs-4 me-3 text-warning"></i>
                            <div>
                                <h6 class="mb-0 fw-semibold">Address</h6>
                                <p class="mb-0">17 Alexander Rd, Alexander Park, Pinetwon, 3610</p>
                            </div>
                        </div>

                        <div class="d-flex align-items-center mt-4">
                            <a href="https://instagram.com/icnorathtrust" target="_blank" class="text-warning fs-4 me-3">
                                <i class="bi bi-instagram"></i>
                            </a>
                            <a href="mailto:info@icnorathtrust.org" class="text-warning fs-4 me-3">
                                <i class="bi bi-envelope"></i>
                            </a>
                            <a href="tel:+27824567890" class="text-warning fs-4">
                                <i class="bi bi-telephone"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        .bg-darkblue {
            background-color: #1E1D6D !important;
        }

        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

        .bi {
            transition: transform 0.2s ease, color 0.2s ease;
        }

        .bi:hover {
            transform: scale(1.2);
            color: #fff !important;
        }
    </style>
}
