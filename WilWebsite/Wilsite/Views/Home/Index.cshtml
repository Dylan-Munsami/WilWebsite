@{
    ViewData["Title"] = "Home";
}

<section class="hero-section text-center">
    <div class="container">
        <h1 class="display-5 fw-bold">Empowering Communities, Building Futures</h1>
        <p class="lead">Together, we create positive and lasting change.</p>
        <a asp-controller="Donate" asp-action="Index" class="btn btn-warning btn-lg mt-3">Donate Now</a>
    </div>
</section>

<section class="py-5 text-center">
    <div class="container">
        <h2 class="mb-4">Our Mission & Vision</h2>
        <p>
            We are committed to improving lives through education, health, and community empowerment initiatives across South Africa.
        </p>
    </div>
</section>

<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-5">Focus Areas</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary">Education</h5>
                        <p>Supporting learners with scholarships and learning materials.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary">Health</h5>
                        <p>Promoting access to healthcare and community wellness programs.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary">Community</h5>
                        <p>Empowering local initiatives to create sustainable livelihoods.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
